<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:text="Total Users :"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/users_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/new_orders"
            android:layout_width="match_parent"
            android:paddingLeft="22dp"
            android:textColor="#373737"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_notifications_24"
            android:foreground="?attr/selectableItemBackground"
            android:layout_marginTop="55dp"
            android:text="New Orders" />

        <Button
            android:id="@+id/del_boys"
            android:layout_width="match_parent"
            android:paddingLeft="22dp"
            android:textColor="#373737"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_directions_bike_24"
            android:foreground="?attr/selectableItemBackground"
            android:layout_marginTop="55dp"
            android:text="Delivery Boys" />

        <Button
            android:id="@+id/res"
            android:layout_width="match_parent"
            android:paddingLeft="22dp"
            android:textColor="#373737"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_format_list_bulleted_24"
            android:foreground="?attr/selectableItemBackground"
            android:layout_marginTop="55dp"
            android:text="Restaurants" />

        <Button
            android:id="@+id/cat"
            android:layout_width="match_parent"
            android:paddingLeft="22dp"
            android:textColor="#373737"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_category_24"
            android:foreground="?attr/selectableItemBackground"
            android:layout_marginTop="55dp"
            android:text="Categories" />

        <Button
            android:id="@+id/orders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:text="All Orders" />


    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <Button
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="2dp">

    </Button>

</RelativeLayout>